<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Management - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            background-color: #121212;
            font-family: 'Arial', sans-serif;
            color: #f1f1f1;
        }

        .main-container {
            max-width: 1200px;
            margin: 30px auto;
            background: #1e1e1e;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #f1f1f1;
            text-align: center;
            margin-bottom: 20px;
        }

        .table-container {
            overflow-x: auto;
            overflow-y: auto;
            max-height: 500px;
            border-radius: 10px;
        }

        .table {
            color: #f1f1f1;
            background: #2c2c2c;
            width: 100%;
            min-width: 900px;
            /* Ensure horizontal scroll on small devices */
            border-collapse: collapse;
        }

        .table thead {
            position: sticky;
            top: 0;
            background-color: #333;
            z-index: 2;
        }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #444;
        }

        .table tbody tr:hover {
            background-color: #444;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn {
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 20px;
            }

            .btn {
                padding: 5px;
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="main-container">
        <h2>Address Management</h2>
        <hr>

        <div class="table-container">
            {{#if addresses.length}}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Date of Birth</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>District</th>
                        <th>State</th>
                        <th>Postal Code</th>
                        <th>Selected</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each addresses}}
                    <tr>
                        <td>{{this.fullName}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.gender}}</td>
                        <td>{{this.formattedDob}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.district}}</td>
                        <td>{{this.state}}</td>
                        <td>{{this.postalCode}}</td>
                        <td>{{#if this.select}}Yes{{else}}No{{/if}}</td>
                        <td>{{this.formattedCreatedAt}}</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-delete" onclick="deleteAddress('{{this._id}}')">Delete</button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p>No addresses found.</p>
            {{/if}}
        </div>
    </div>

    <script>
        async function deleteAddress(addressId) {
            if (confirm("Are you sure you want to delete this address?")) {
                try {
                    const response = await fetch(`/user/delete-address/${addressId}`, {
                        method: "DELETE",
                        headers: {
                            "Content-Type": "application/json"
                        }
                    });

                    const result = await response.json();

                    if (response.ok) {
                        alert("Address deleted successfully.");
                        location.reload();
                    } else {
                        alert(result.message || "Failed to delete address.");
                    }
                } catch (error) {
                    console.error("Error:", error);
                    alert("An error occurred.");
                }
            }
        }
    </script>
</body>

</html>