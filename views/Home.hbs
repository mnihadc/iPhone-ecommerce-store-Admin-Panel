<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* General Styling */
        body {
            background: #333;
            font-family: Arial, sans-serif;
        }

        .container-fluid {
            padding: 20px;
            background: #312d2d;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: none;
            border-radius: 1.5rem;
            text-align: center;
            background: #1a1a1a;

        }

        .card-header {
            background: linear-gradient(to right, darkslategray, slategray);
            color: white;
            font-weight: 600;
            border-top-left-radius: 1.5rem;
            border-top-right-radius: 1.5rem;
        }

        .card-body {
            font-size: 18px;
            color: #ffffff;
            background: #1a1a1a;
        }

        .card-body p {
            font-size: 22px;
            font-weight: bold;
        }

        /* Chart Container Styling */
        #chart-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
            border-radius: 1.5rem;
            background: #633b3b;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Side: 4 Cards (2 in each row) -->
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">Total Products</div>
                            <div class="card-body">
                                <p>{{totalProducts}}</p>
                                <small>Total number of products available in the store.</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">Total Users</div>
                            <div class="card-body">
                                <p>{{totalUsers}}</p>
                                <small>Total number of registered users on the platform.</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">Sales Growth</div>
                            <div class="card-body">
                                <p>+28% This Month</p>
                                <small>Increase in sales compared to last month.</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">Recent Orders</div>
                            <div class="card-body">
                                <p>47 new orders</p>
                                <small>Orders placed in the last 24 hours.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Performance Chart -->
            <div class="col-md-4">
                <div id="chart-container">
                    <canvas id="performanceChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('performanceChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(54, 162, 235, 0.5)');
        gradient.addColorStop(1, 'rgba(54, 162, 235, 0)');

        const performanceChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                datasets: [{
                    label: 'Monthly Growth',
                    data: [1200, 1500, 1100, 1800, 1300, 1600, 1900, 1400, 1700, 2100, 1600, 1800],
                    backgroundColor: gradient,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    fill: true,
                    pointBackgroundColor: 'rgba(54, 162, 235, 1)',
                    pointBorderColor: '#ffffff',
                    pointBorderWidth: 2,
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Growth Value'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Month'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });
    </script>

    <!-- Script files -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>