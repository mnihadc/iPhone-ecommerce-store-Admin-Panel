<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>Sales Report</h1>
        </header>

        <!-- Sales Summary Section -->
        <section class="sales-summary">
            <div class="summary-item">
                <h3>Total Sales</h3>
                <p>₹ 1,500,000</p>
            </div>
            <div class="summary-item">
                <h3>Total Orders</h3>
                <p>250</p>
            </div>
            <div class="summary-item">
                <h3>Total Products Sold</h3>
                <p>500</p>
            </div>
        </section>

        <!-- Sales by Product Section -->
        <section class="sales-by-product">
            <h2>Sales by Product</h2>
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity Sold</th>
                        <th>Total Sales</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>iPhone 12</td>
                        <td>150</td>
                        <td>₹ 900,000</td>
                    </tr>
                    <tr>
                        <td>iPhone 13</td>
                        <td>100</td>
                        <td>₹ 600,000</td>
                    </tr>
                    <tr>
                        <td>MacBook Pro</td>
                        <td>50</td>
                        <td>₹ 500,000</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Sales by Date Section -->
        <section class="sales-by-date">
            <h2>Sales by Date</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Total Sales</th>
                        <th>Total Orders</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2024-11-01</td>
                        <td>₹ 250,000</td>
                        <td>30</td>
                    </tr>
                    <tr>
                        <td>2024-11-02</td>
                        <td>₹ 300,000</td>
                        <td>40</td>
                    </tr>
                    <tr>
                        <td>2024-11-03</td>
                        <td>₹ 400,000</td>
                        <td>50</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Monthly Sales Section -->
        <section class="sales-by-month">
            <h2>Sales by Month</h2>
            <table>
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Total Sales</th>
                        <th>Total Orders</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>November 2024</td>
                        <td>₹ 1,500,000</td>
                        <td>250</td>
                    </tr>
                    <tr>
                        <td>October 2024</td>
                        <td>₹ 1,200,000</td>
                        <td>200</td>
                    </tr>
                    <tr>
                        <td>September 2024</td>
                        <td>₹ 1,000,000</td>
                        <td>150</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</body>

</html>