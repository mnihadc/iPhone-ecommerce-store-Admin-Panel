<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>{{title}}</h1>
        </header>

        <!-- Sales Summary Section -->
        <section class="sales-summary">
            <div class="summary-item">
                <h3>Total Sales</h3>
                <p>₹ {{totalSales}}</p>
            </div>
            <div class="summary-item">
                <h3>Total Orders</h3>
                <p>{{totalOrders}}</p>
            </div>
            <div class="summary-item">
                <h3>Total Products Sold</h3>
                <p>{{totalProductsSold}}</p>
            </div>
        </section>

        <!-- Sales by Product Section -->
        <section class="sales-by-product">
            <h2>Sales by Product</h2>
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity Sold</th>
                        <th>Total Sales</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each salesByProduct}}
                    <tr>
                        <td>{{productName}}</td>
                        <td>{{quantitySold}}</td>
                        <td>₹ {{totalSales}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>

        <!-- Sales by Date Section -->
        <section class="sales-by-date">
            <h2>Sales by Date</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Total Sales</th>
                        <th>Total Orders</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each salesByDate}}
                    <tr>
                        <td>{{date}}</td>
                        <td>₹ {{totalSales}}</td>
                        <td>{{totalOrders}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>

        <!-- Monthly Sales Section -->
        <section class="sales-by-month">
            <h2>Sales by Month</h2>
            <table>
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Total Sales</th>
                        <th>Total Orders</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each salesByMonth}}
                    <tr>
                        <td>{{month}}</td>
                        <td>₹ {{totalSales}}</td>
                        <td>{{totalOrders}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</body>

</html>