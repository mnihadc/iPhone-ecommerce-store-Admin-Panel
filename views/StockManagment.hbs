<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .header {
            background: linear-gradient(to right, #007bff, #0056b3);
            color: white;
            padding: 30px 15px;
            text-align: center;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .header p {
            font-size: 1.2rem;
            margin-top: 10px;
        }

        .container {
            margin-top: 30px;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
            color: black;
            height: 430px;
            /* Fixed card height */
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            width: 100%;
            height: 200px;
            /* Fixed image height */
            object-fit: cover;
        }

        .card-body {
            flex-grow: 1;
            /* Allow body to take up remaining space */
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .card-text {
            margin-bottom: 5px;
            font-size: 0.95rem;
        }

        .card-footer {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        .card-footer button {
            font-size: 0.9rem;
            margin: 0 5px;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }

        .search-bar input {
            width: 100%;
            margin-top: 10px;
        }

        /* Add CSS to make Stock and Price fields appear inline */
        .edit-fields {
            display: flex;
            justify-content: space-between;
        }

        .edit-fields input {
            width: 45%;
            /* Make input fields take up equal space */
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <div class="header">
        <h1>{{title}}</h1>
        <p>Efficiently manage and track your inventory to ensure a seamless supply chain.</p>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" id="searchInput" class="form-control" placeholder="Search Stock Items"
                onkeyup="searchStock()">
        </div>

        <!-- Stock Cards -->
        <div class="row" id="stockContainer">
            {{#each products}}
            <div class="col-md-3 mb-4 stock-card" data-name="{{this.name}}" data-category="{{this.category}}">
                <div class="card">
                    <!-- Display only the first image -->
                    <img src="{{this.image}}" alt="{{this.name}}" class="card-img-top card-img-laptop">

                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text"><strong>Category:</strong> {{this.category}}</p>
                        <h5 class="card-text"><strong>Stock:</strong> <span class="stock-value"
                                id="stock-{{@index}}"><strong style="font-size: x-large;">{{this.stock}}</strong></span>
                        </h5>
                        <p class="card-text"><strong>Price:</strong> â‚¹<span class="price-value"
                                id="price-{{@index}}">{{this.price}}</span></p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-light btn-sm" onclick="editStock({{@index}})">Edit</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteStock('{{this.name}}')">Delete</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script>
        function searchStock() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.stock-card');
            cards.forEach(card => {
                const name = card.dataset.name.toLowerCase();
                const category = card.dataset.category.toLowerCase();
                card.style.display = (name.includes(searchValue) || category.includes(searchValue)) ? 'block' : 'none';
            });
        }

        function editStock(id) {
            const stockElement = document.getElementById('stock-' + id);
            const priceElement = document.getElementById('price-' + id);

            const currentStock = stockElement.innerText;
            const currentPrice = priceElement.innerText;

            // Create input fields for stock and price inside the edit-fields div
            stockElement.innerHTML = `<div class="edit-fields">
                                        <input type="number" value="${currentStock}" id="new-stock-${id}">
                                        <input type="number" value="${currentPrice}" id="new-price-${id}">
                                      </div>`;

            // Change button text to Save
            const editButton = document.querySelectorAll('.btn-light')[id];
            editButton.innerText = "Save";
            editButton.setAttribute('onclick', `saveStock(${id})`);
        }

        function saveStock(id) {
            const newStock = document.getElementById('new-stock-' + id).value;
            const newPrice = document.getElementById('new-price-' + id).value;

            // Update the stock and price values
            document.getElementById('stock-' + id).innerText = newStock;
            document.getElementById('price-' + id).innerText = newPrice;

            // Change button text back to Edit
            const editButton = document.querySelectorAll('.btn-light')[id];
            editButton.innerText = "Edit";
            editButton.setAttribute('onclick', `editStock(${id})`);
        }

        function deleteStock(productName) {
            if (confirm('Are you sure you want to delete: ' + productName + '?')) {
                alert(productName + ' has been deleted.');
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>