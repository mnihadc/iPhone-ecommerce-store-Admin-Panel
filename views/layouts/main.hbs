<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    {{#if isHomePage}}
    <link rel="stylesheet" href="/css/home.css">
    {{/if}}
    {{#if isOrderManagementPage}}
    <link rel="stylesheet" href="/css/order.css">
    {{/if}}
    {{#if isSalesReportPage}}
    <link rel="stylesheet" href="/css/salesreport.css">
    {{/if}}
    <style>
        /* Fixed sidebar styles */
        #wrapper {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        #sidebar-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 250px;
            background-color: #3e4b57;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        #sidebar-wrapper .list-group-item {
            border: none;
        }

        /* Fixed header styles */
        #topBar {
            position: fixed;
            top: 0;
            left: 250px;
            /* Adjusted to sidebar width */
            right: 0;
            z-index: 10;
            width: calc(100% - 250px);
            background-color: #f9f9f9;
            border-bottom: 1px solid #ddd;
            padding: 10px 15px;
        }

        #page-content-wrapper {
            margin-left: 250px;
            margin-top: 60px;
            /* Added top margin for fixed header */
            padding: 20px;
            flex-grow: 1;
            background-color: #221d1d;
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">iStore Admin Panel</div>
            <div class="list-group list-group-flush">
                <a href="/" class="list-group-item list-group-item-action " id="listItems">Dashboard</a>
                <a href="/user/user-mangement" class="list-group-item list-group-item-action " id="listItems">User
                    Management</a>
                <a href="/product/get-product" class="list-group-item list-group-item-action" id="listItems">Product
                    Management</a>
                <a href="/product/create-product" class="list-group-item list-group-item-action"
                    id="listItems">Create-Product</a>
                <a href="/order/sales-reports" class="list-group-item list-group-item-action " id="listItems">Sales
                    Reports</a>
                <a href="/order/order-mangements" class="list-group-item list-group-item-action  " id="listItems">Order
                    Management</a>
                <a href="/user/get-user-address" class="list-group-item list-group-item-action "
                    id="listItems">Address-Mangement</a>
                <a href="/settings" class="list-group-item list-group-item-action " id="listItems">Settings</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light  border-bottom" id="topBar">
                <h5 style="color: black;">Welcome to Admin</h5>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link btn btn-danger" style="color: wheat;font-size: bolder;"
                                href="/auth/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="">
                {{{body}}}
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar (optional)
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>

</html>