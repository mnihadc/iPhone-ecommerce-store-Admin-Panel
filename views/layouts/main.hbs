<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    {{#if isHomePage}}
    <link rel="stylesheet" href="/css/home.css">
    {{/if}}
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Istore Admin Panel</div>
            <div class="list-group list-group-flush">
                <a href="/" class="list-group-item list-group-item-action " id="listItems">Dashboard</a>
                <a href="/user/user-mangement" class="list-group-item list-group-item-action " id="listItems">User
                    Management</a>
                <a href="/product-management" class="list-group-item list-group-item-action" id="listItems">Product
                    Management</a>
                <a href="/product/create-Product" class="list-group-item list-group-item-action"
                    id="listItems">Create-Product</a>
                <a href="/sales-reports" class="list-group-item list-group-item-action " id="listItems"> Sales
                    Reports</a>
                <a href="/order-management" class="list-group-item list-group-item-action  " id="listItems">Order
                    Management</a>
                <a href="/inventory" class="list-group-item list-group-item-action " id="listItems">Inventory</a>
                <a href="/settings" class="list-group-item list-group-item-action " id="listItems">Settings</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light  border-bottom" id="topBar">
                <h5>Welcome</h5>
                <button class="btn btn-primary ml-5" id="menu-toggle">Toggle Menu</button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid mt-4">
                {{{body}}}
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>

</html>