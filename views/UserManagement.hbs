<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #f5b6d0;
            color: white;
        }

        .container {
            background: #000000;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            margin-top: 20px;
            border: 1px solid #ccc;
            border-collapse: collapse;
            background: #000000;
        }

        th,
        td {
            text-align: center;
            padding: 12px;
            border: 1px solid #ccc;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #7a7171;
            color: #ccc;
        }

        tr:nth-child(odd) {
            background-color: #333;
            color: #ccc;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-danger {
            background-color: #ff4d4d;
            border: none;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 5px;
        }

        .btn-danger:hover {
            background-color: #e60000;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="search-bar">
            <h3>User Management</h3>
            <input type="text" id="searchInput" class="form-control" style="width: 250px;" placeholder="Search Users"
                onkeyup="searchUsers()">
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                {{#each users}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.username}}</td>
                    <td>{{this.email}}</td>
                    <td><button class="btn btn-danger" onclick="deleteUser('{{this._id}}')">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script>
        function deleteUser(userId) {
            Swal.fire({
                title: 'Are you sure you want to delete this user?',
                text: "This action cannot be undone.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/user/user-delete/${userId}`, {
                        method: "DELETE",
                    })
                        .then(response => {
                            if (response.ok) {
                                Swal.fire('Deleted!', 'User deleted successfully.', 'success');
                                location.reload();
                            } else {
                                Swal.fire('Failed!', 'Failed to delete user.', 'error');
                            }
                        })
                        .catch(error => {
                            console.error("Error deleting user:", error);
                            Swal.fire('Error!', 'An error occurred while deleting the user.', 'error');
                        });
                }
            });
        }

        function searchUsers() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#userTableBody tr');
            rows.forEach(row => {
                const username = row.cells[1].innerText.toLowerCase();
                const email = row.cells[2].innerText.toLowerCase();
                row.style.display = (username.includes(searchValue) || email.includes(searchValue)) ? '' : 'none';
            });
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>