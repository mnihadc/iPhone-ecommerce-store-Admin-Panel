<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #f5b6d0;
            /* Rose-colored background for the body */
            color: white;
            /* White text color for the entire body */
        }

        .container {
            background: #000000;
            /* Black background for the container */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            margin-top: 20px;
            border: 1px solid #ccc;
            /* Light gray border around the table */
            border-collapse: collapse;
            background: #000000;
            /* Black background for the table */
        }

        th,
        td {
            text-align: center;
            padding: 12px;
            border: 1px solid #ccc;
            /* Gray border for table rows and columns */
        }

        th {
            background-color: #333;
            /* Dark gray background for header */
            color: white;
            /* White text for header */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
            /* Light gray background for even rows */
        }

        tr:nth-child(odd) {
            background-color: #333;
            /* Dark background for odd rows */
            color: white;
            /* White text for odd rows */
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-danger {
            background-color: #ff4d4d;
            border: none;
            color: white;
            /* White text for the button */
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 5px;
        }

        .btn-danger:hover {
            background-color: #e60000;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="search-bar">
            <h3>User Management</h3>
            <input type="text" id="searchInput" class="form-control" style="width: 250px;" placeholder="Search Users"
                onkeyup="searchUsers()">
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <!-- User rows will be injected here via JavaScript -->
            </tbody>
        </table>
    </div>

    <script>
        const users = [
            { id: 1, username: 'john_doe', email: 'john@example.com' },
            { id: 2, username: 'jane_doe', email: 'jane@example.com' },
            { id: 3, username: 'alice_smith', email: 'alice@example.com' },
            { id: 4, username: 'bob_jones', email: 'bob@example.com' }
        ];

        function loadUserTable() {
            const tableBody = document.getElementById('userTableBody');
            tableBody.innerHTML = '';  // Clear previous content
            users.forEach(user => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${user.id}</td>
                    <td>${user.username}</td>
                    <td>${user.email}</td>
                    <td><button class="btn btn-danger" onclick="deleteUser(${user.id})">Delete</button></td>
                `;
                tableBody.appendChild(row);
            });
        }

        function deleteUser(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                const userIndex = users.findIndex(user => user.id === userId);
                if (userIndex !== -1) {
                    users.splice(userIndex, 1);  // Remove user from array
                    loadUserTable();  // Re-load the table after deletion
                }
            }
        }

        function searchUsers() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const filteredUsers = users.filter(user => {
                return user.username.toLowerCase().includes(searchValue) || user.email.toLowerCase().includes(searchValue);
            });
            displayFilteredUsers(filteredUsers);
        }

        function displayFilteredUsers(filteredUsers) {
            const tableBody = document.getElementById('userTableBody');
            tableBody.innerHTML = '';  // Clear previous content
            filteredUsers.forEach(user => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${user.id}</td>
                    <td>${user.username}</td>
                    <td>${user.email}</td>
                    <td><button class="btn btn-danger" onclick="deleteUser(${user.id})">Delete</button></td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Load the user table initially
        loadUserTable();
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>