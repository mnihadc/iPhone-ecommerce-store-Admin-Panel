<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #1d1c1c;
            font-family: 'Arial', sans-serif;
        }

        .container {
            background: #333;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            max-width: 900px;
        }

        h3 {
            font-size: 32px;
            color: #007bff;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-control {
            border-radius: 8px;
            background: #7c7272;
            color: #fff;
            border: 1px solid #555;
        }

        .form-control:focus {
            border-color: #007bff;

            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border-radius: 8px;
            padding: 12px;
            font-size: 16px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .add-color-btn,
        .add-spec-btn {
            background-color: #28a745;
            color: white;
            font-size: 14px;
            padding: 8px;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 10px;
        }

        .add-color-btn:hover,
        .add-spec-btn:hover {
            background-color: #218838;
        }

        /* Ensuring all backgrounds in the container are dark */
        .container,
        .container .form-group,
        .container .form-control,
        .container input[type="file"],
        .container input[type="text"],
        .container select,
        .container textarea {
            background-color: #333 !important;
            color: #fff !important;
            border-color: #555 !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <h3>Add New Product</h3>
        <form action="/product/add-product" method="POST">
            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" class="form-control" id="productName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="iPhone">iPhone</option>
                            <option value="iPad">iPad</option>
                            <option value="MacBook">MacBook</option>
                            <option value="Apple Watch">Apple Watch</option>
                            <option value="AirPods">AirPods</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" name="price" required min="0">
                    </div>
                    <div class="form-group">
                        <label for="offerPrice">Offer Price (Optional)</label>
                        <input type="number" class="form-control" id="offerPrice" name="offerPrice" min="0">
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock</label>
                        <input type="number" class="form-control" id="stock" name="stock" required min="0">
                    </div>

                    <div class="form-group">
                        <label for="productImages">Product Images (URLs)</label>
                        <div id="productImagesContainer">
                            <!-- Multiple product image URLs can be added here -->
                            <input type="text" class="form-control mt-2" name="productImages[]"
                                placeholder="Enter image URL" required>
                        </div>
                        <button type="button" class="btn btn-info mt-2" id="addProductImage">Add More Images</button>
                    </div>



                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="colorOptions">Color Options</label>
                        <div id="colorOptions">
                            <div class="color-option">
                                <input type="text" class="form-control mt-2" name="colorName[]" placeholder="Color Name"
                                    required>
                                <input type="text" class="form-control mt-2" name="colorCode[]" placeholder="Color Code"
                                    required>
                                <input type="text" class="form-control mt-2" name="colorImages[]"
                                    placeholder="Enter image URL">
                            </div>
                        </div>
                        <button type="button" class="add-color-btn" id="addColor">Add More Colors</button>
                    </div>


                    <div class="form-group">
                        <label for="specifications">Specifications</label>
                        <div class="specifications-group">
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[processor]"
                                    placeholder="Processor" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[memory]"
                                    placeholder="Memory" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[storage]"
                                    placeholder="Storage" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[displaySize]"
                                    placeholder="Display Size" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[camera]"
                                    placeholder="Camera" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[battery]"
                                    placeholder="Battery" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="specifications[connectivity]"
                                    placeholder="Connectivity" required>
                            </div>
                            <div class="form-group">
                                <label for="releaseDate">Release Date</label>
                                <input type="date" class="form-control" id="releaseDate" name="releaseDate">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block mt-4">Add Product</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        // Dynamically add more product image URL input fields
        // Dynamically add more product image URL input fields
        $("#addProductImage").click(function () {
            const productImageInput = `
        <input type="text" class="form-control mt-2" name="productImages[]" placeholder="Enter image URL" required>
    `;
            $("#productImagesContainer").append(productImageInput);
        });


        // Dynamically add more color options
        $("#addColor").click(function () {
            const colorHtml = `
        <div class="color-option mt-3">
            <input type="text" class="form-control mt-2" name="colorName[]" placeholder="Color Name" required>
            <input type="text" class="form-control mt-2" name="colorCode[]" placeholder="Color Code" required>
            <input type="text" class="form-control mt-2" name="colorImages[]" placeholder="Enter image URL">
        </div>
    `;
            $("#colorOptions").append(colorHtml);
        });

    </script>
</body>

</html>